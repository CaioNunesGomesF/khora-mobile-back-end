{
  "name": "khora-mobile-back-end",
  "version": "1.0.0",
  "description": "Back-end do projeto Khora Mobile",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/src/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/generated/**",
      "!src/config/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaioNunesGomesF/Khora_Mobile_Back_End.git"
  },
  "author": "Caio Nunes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CaioNunesGomesF/Khora_Mobile_Back_End/issues"
  },
  "homepage": "https://github.com/CaioNunesGomesF/Khora_Mobile_Back_End#readme",
  "dependencies": {
    "@google/genai": "^1.19.0",
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.2",
    "jest": "^30.1.3",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.10",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4"
  }
}
